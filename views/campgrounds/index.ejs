<% layout('/layouts/boilerplate') -%>
<div id="cluster-map"></div>
<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
    const campgrounds = <%- JSON.stringify({features: campgrounds }) %>
</script>
<script src="/JS/clusterMap.js"></script>

<div class="container mb-4">
    <h1 class="text-center">Search campground</h1>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="GET">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="title" placeholder="Search..." >
                    <span class="input-group-text" id="basic-addon2"><i class="fa fa-search"></i></span>
                  </div>
            </form>
        </div>
    </div>
</div>
<% if(search){ %> 
    <% if(!lengthAfter){ %>
        <h3 class="text-muted text-center">Sorry we can not found</h3>
    <% }else{ %> 
        <h3 class="text-muted text-center"><%= lengthAfter %>/<%= lengthBefore %> results found</h3>
    <% } %> 
<% } %> 
<%  %> 
<% campgrounds.forEach((campground, i)=>{%>
    <a href="/campgrounds/<%= campground._id %>" class="text-decoration-none text-dark">
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= campground.images[0].url %>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%= campground.title %>
                        </h4>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.location %>
                            </small>
                        </p>
                        <p class="card-text">
                            <%= campground.description.substring(0,200)%> <%= campground.description.length > 200?'...':'' %> 
                        </p>
                        <p class="text-end fs-4"><%= averageRatings[i] %> <span class="text-warning">&#9733</span> (<%= campground.reviews.length %> reviews) </p>
                    </div>
                </div>
            </div>
        </div>
    </a>
<% }) %>