<% layout('/layouts/boilerplate') -%>
<% function ratioOfRating(num, reviews){ %>
  <% if(!reviews.length) return 0%> 
  <% return Math.round((reviews.filter(el => el.rating === num).length/reviews.length)*100) %>
<% } %>
<link rel="stylesheet" href="/styles/star.css">
  <div class="row mb-3">
    <div class="col-6">
      <div class="card">

        <div id="campgroundCrousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% campground.images.forEach((img, i)=>{ %>
              <div class="carousel-item <%= !i?'active':'' %>  ">
                <img src="<%= img.url %> " class="d-block w-100" alt="...">
              </div>
              <% }) %>
          </div>
          <% if(campground.images.length> 1){ %>
            <button class="carousel-control-prev" type="button" data-bs-target="#campgroundCrousel"
              data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#campgroundCrousel"
              data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
            <% } %>
        </div>

        <div class="card-body">
          <h5 class="card-title">
            <%= campground.title %>
          </h5>
          <p class="card-text">
            <%= campground.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Contributed by: <%= campground.author.username %>
          </li>
          <li class="list-group-item text-muted">
            <%= campground.location %>
          </li>
          <li class="list-group-item">$<%= campground.price %> /night</li>
        </ul>
        <% if(currentUser && currentUser._id.equals(campground.author._id)) { %>
          <div class="card-body">
            <a class="btn btn-info" href="/campgrounds/<%= campground.id %>/edit" class="card-link">Edit</a>
            <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
              <button class="btn btn-danger" type="submit">Delete</button>
            </form>
          </div>
          <% } %>
      </div>
      <div class="card-footer text-muted">
        2 days ago <a href="/campgrounds">All campgrounds</a>
      </div>
    </div>



<!-- map & reviews -->
    <div class="col-6">
      <!-- map -->
      <div id='map' style='width: 100%; height: 20rem mb-3'></div>
      <!-- overview -->
      <div class="card mt-3">
        <div class="row mt-4">
          <h3 class="card-title">Customer feedback</h3>
          <div class="col-6 d-flex justify-content-center align-items-center">
            <h1 class="fs-1 text-warning"><%= averageRating%>&#9733;</h1>
          </div>
          <div class="col-6">
            <div class="text-warning fs-4">	&#9733;&#9733;&#9733;&#9733;&#9733;<span class="text-dark fs-5"><%= ratioOfRating(5, campground.reviews) %>%</span></div>
            <div class="text-warning fs-4">	&#9733;&#9733;&#9733;&#9733;&#9734;<span class="text-dark fs-5"><%= ratioOfRating(4, campground.reviews) %>%</span></div>
            <div class="text-warning fs-4">	&#9733;&#9733;&#9733;&#9734;&#9734;<span class="text-dark fs-5"><%= ratioOfRating(3, campground.reviews) %>%</span></div>
            <div class="text-warning fs-4">	&#9733;&#9733;&#9734;&#9734;&#9734;<span class="text-dark fs-5"><%= ratioOfRating(2, campground.reviews) %>%</span></div>
            <div class="text-warning fs-4">	&#9733;&#9734;&#9734;&#9734;&#9734;<span class="text-dark fs-5"><%= ratioOfRating(1, campground.reviews) %>%</span></div>
          </div>
        </div>
      </div>
    
      <!-- overview -->
      <% if(currentUser){ %>
        <h2>Leave a review</h2>
        <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
          <fieldset class="starability-basic">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
              aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <div class="mb-3">
            <textarea class="form-control" name="review[body]" id="review" cols="30" rows="4" required></textarea>
          </div>
          <button type="submit" class="btn btn-success btn-sm">Send</button>
        </form>
        <% } %>

          <% for(review of campground.reviews){ %>
            <div class="card mb-3">
              <div class="card-body">
                <h4 class="card-title">
                  <%= review.author.username %>
                </h4>
                <p class="starability-result" data-rating="<%= review.rating %>"></p>
                <p class="card-text">
                  <%= review.body %>
                </p>
                <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                  <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
                    method="POST">
                    <button type="submit" class="btn btn-danger btn-sm">Delete reviews</button>
                  </form>
                  <% } %>
              </div>
            </div>
            <% } %>
    </div>
  </div>

  <script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
    const campground = <%- JSON.stringify(campground) %>
  </script>
  <script src="/JS/showMap.js"></script>